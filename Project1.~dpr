program Project1;

uses
  Forms,
  Unit1 in 'Unit1.pas' {Form1},
  Funcoes in 'Funcoes.pas',
  Unit2 in 'Unit2.pas' {Splash_Screen};

{$R *.res}

begin
  Application.Initialize;
  Application.Title := 'DOS GAMES LAUNCHER 1.0';
  //------------------------------------------------
  Splash_Screen:=Tsplash_screen.Create(Application);
  Splash_Screen.Show;
  Splash_Screen.Refresh;
  //------------------------------------------------
  Application.CreateForm(TForm1, Form1);
  //------------------------------------------------
  {PEGA AS CONEXÕES DE INTERNET E REDE LAN}
  //------------------------------------------------
  Form1.IP_Interno_Global:=Form1.IdIPWatch1.LocalIP;
  Form1.IP_Externo_Global:=IP_NET;
  //------------------------------------------------
  Splash_Screen.Hide;
  Splash_Screen.Free;
  Application.Run;
end.
